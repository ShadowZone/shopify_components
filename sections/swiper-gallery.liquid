{% render 'swiper-gallery',
  context: 'section',
  settings: section.settings,
  blocks: section.blocks,
  unique_id: section.id
%}

{% schema %}
{
  "name": "Swiper Highlight Slider",
  "settings": [
    {
      "type": "header",
      "content": "Allgemeine Einstellungen"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Abgerundete Ecken der Slides",
      "default": 12
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe Sektion",
      "default": "#f4f4f4"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 40
    },
    {
      "type": "header",
      "content": "Pagination"
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Pagination anzeigen",
      "default": true
    },
    {
      "type": "header",
      "content": "Caption (Titel) Einstellungen"
    },
    {
      "type": "select",
      "id": "caption_font_family",
      "label": "Schriftart Caption",
      "default": "Helvetica, Arial, sans-serif",
      "options": [
        { "value": "Helvetica, Arial, sans-serif", "label": "Standard (Helvetica/Arial)" },
        { "value": "Georgia, serif", "label": "Serif (Georgia)" },
        { "value": "Verdana, Geneva, sans-serif", "label": "Sans-Serif (Verdana)" },
        { "value": "monospace", "label": "Monospace" }
      ]
    },
    {
      "type": "color",
      "id": "caption_text_color",
      "label": "Schriftfarbe Caption",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "caption_bg_color",
      "label": "Hintergrundfarbe Caption (für Transparent: #00000000)",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Überschrift",
          "default": "Hier steht dein Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (URL)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Swiper Highlight Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
