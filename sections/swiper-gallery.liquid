{% comment %}
  Swiper CSS und JS laden. 
  HINWEIS: Wenn dein Theme Swiper bereits nutzt, kannst du diese Zeilen entfernen, 
  um doppeltes Laden zu vermeiden.
{% endcomment %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<style>
  /* Grundlegendes Layout der Section */
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    overflow: hidden; /* Wichtig, damit keine Scrollbalken entstehen */
  }

  .swiper-container-{{ section.id }} {
    width: 100%;
    padding-bottom: 40px; /* Platz für Pagination oder Schatten */
  }

  /* Slide Styling */
  .swiper-slide {
    /* Wichtig für den "Peek"-Effekt (Teil des nächsten Elements sichtbar) */
    width: 70%; 
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0.6; /* Inaktive Slides etwas ausblenden */
    transform: scale(0.85); /* Inaktive Slides kleiner */
    transition: all 0.4s ease; /* Weicher Übergang */
    user-select: none; /* Verhindert Textauswahl beim Wischen */
    -webkit-user-drag: none; /* Verhindert das Ziehen von Bildern/Links */
    -webkit-touch-callout: none; /* Verhindert das Kontextmenü bei langem Drücken */
    cursor: grab; /* Erhält den visuellen Hinweis */
    /* iOS reagiert besser, wenn der Standard-Tap-Effekt deaktiviert ist */
    -webkit-tap-highlight-color: transparent; 
  }
  
  /* Media Query für Desktop: Dort vielleicht etwas schmaler, damit mehr sichtbar ist */
  @media(min-width: 768px) {
    .swiper-slide {
      width: 40%;
    }
  }

  /* Das AKTIVE (zentrierte) Element */
  .swiper-slide-active {
    opacity: 1;
    transform: scale(1.05); /* Aktives Slide leicht vergrößern */
    z-index: 2;
  }

  /* Inhalt Wrapper (Link) */
  .slide-content-link {
    text-decoration: none;
    color: inherit;
    display: block;
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  /* Bild Styling */
  .slide-image {
    width: 100%;
    height: 350px; /* Feste Höhe für Einheitlichkeit */
    object-fit: cover;
    display: block;
  }

  /* Caption Styling */
  .slide-caption {
    text-align: center;
    padding: 15px 10px;
    background: #fff;
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
  }
</style>

<div class="section-{{ section.id }}">
  <div class="swiper swiper-container-{{ section.id }}">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="slide-content-link">
          {% else %}
            <div class="slide-content-link">
          {% endif %}
            
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: 
                loading: 'lazy', 
                class: 'slide-image', 
                alt: block.settings.caption 
              }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'slide-image' }}
            {% endif %}

            {% if block.settings.caption != blank %}
              <div class="slide-caption">
                {{ block.settings.caption }}
              </div>
            {% endif %}

          {% if block.settings.link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    
    {%if settings.pagination %}<div class="swiper-pagination"></div> {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper-container-{{ section.id }}', {
      effect: 'slide',
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 'auto', // Automatische Breite basierend auf CSS
      spaceBetween: 20,      // Abstand zwischen Slides
      loop: false,           // **GEÄNDERT: Kein endloses Wischen mehr**
      speed: 600,            // Animationsgeschwindigkeit
      
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      
      // Accessibility
      a11y: {
        prevSlideMessage: 'Previous slide',
        nextSlideMessage: 'Next slide',
      },
    });
  });
</script>

{% schema %}
{
  "name": "Swiper Highlight Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Pagination",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe",
      "default": "#f4f4f4"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Überschrift",
          "default": "Hier steht dein Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (URL)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Swiper Highlight Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
